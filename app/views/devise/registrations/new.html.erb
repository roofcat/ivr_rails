<div class="panel">
  <div class="panel-body">
    <h2>Registro</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="form-group label-floating">
        <%= f.label :email, "Correo", class: "control-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group label-floating">
        <%= f.label :password, "Contraseña", class: "control-label" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> characters minimum)
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group label-floating">
        <%= f.label :password_confirmation, "Repetir contraseña", class: "control-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Registrar", class: "btn btn-raised btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
form-group label-floating
